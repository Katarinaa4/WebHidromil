@model Hidromil.Models.Usluga

@{
    Layout = "_LayoutGalerijaAdmin";
    ViewData["Title"] = "Usluge";
}
<div style=" display:flex; flex:1;">
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">
                <form method="post" asp-action="AdminDodajUslugu" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="container">
                        <div class="gap-40"></div>
                        <div class="form-group">

                            <input asp-for="@Model.SlikaFajl" type="file" name="SlikaFajl" id="SlikaFajl" hidden />
                            <input type="button" value="Dodaj sliku" onclick="document.getElementById('SlikaFajl').click();" class="btn btn-primary" />

                            <input type="text" asp-for="@Model.Naziv" />
                            <input type="text" asp-for="@Model.Opis" />

                            <input type="submit" value="Dodaj uslugu" class="btn btn-primary" asp-action="DodajUslugu" />
                            <input type="submit" value="Vrati se nazad" class="btn btn-primary" asp-controller="Slika" asp-action="GalerijaAdmin" />
                        </div>
                        <div class="gap-40"></div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>