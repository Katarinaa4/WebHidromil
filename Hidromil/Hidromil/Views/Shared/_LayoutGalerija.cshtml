<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hidromil - @ViewBag.Title</title>
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    @*<title>Constra - Construction Html5 Template</title>*@

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Construction Html5 Template">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">

    <!-- Favicon
    ================================================== -->
    <link rel="icon" type="image/png" href="~/images/logo1.jpg">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/plugins/bootstrap/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css">
    <!-- Animation -->
    <link rel="stylesheet" href="~/plugins/animate-css/animate.css">
    <!-- slick Carousel -->
    <link rel="stylesheet" href="~/plugins/slick/slick.css">
    <link rel="stylesheet" href="~/plugins/slick/slick-theme.css">
    <!-- Colorbox -->
    <link rel="stylesheet" href="~/plugins/colorbox/colorbox.css">
    <!-- Template styles-->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header id="header" class="header-two">
        <div class="site-navigation">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg navbar-light p-0">

                            <div class="logo">
                                <a class="d-block" asp-controller="Home" asp-action="Index"  style="text-align:end; font-size:x-large;">
                                    <img style="height:70px; width:170px;" loading="lazy" src="../images/LOGO2.jpg" alt="Hidromil">
                                </a>
                            </div><!-- logo end -->

                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div id="navbar-collapse" class="collapse navbar-collapse" style="margin-left:10px;">
                                <ul class="nav navbar-nav ml-auto align-items-lg-start">
                                    <li class="nav-item active">
                                        <a asp-controller="Home" asp-action="Index" class="nav-link">Početna </a>

                                    </li>

                                    <li class="nav-item">
                                        <a asp-controller="Home" asp-action="ONama" class="nav-link">O nama</a>

                                    </li>

                                    <li class="nav-item">
                                        <a asp-controller="Home" asp-action="Usluge" class="nav-link">Usluge </a>

                                    </li>

                                    <li class="nav-item">
                                        <a asp-controller="Home" asp-action="Galerija" class="nav-link">Galerija </a>

                                    </li>

                                    <li class="nav-item ">
                                        <a asp-controller="Home" asp-action="Kontakt" class="nav-link ">Kontakt </a>

                                    </li>


                                </ul>

                            </div>
                        </nav>
                    </div>
                    <!--/ Col end -->
                </div>
                <!--/ Row end -->
            </div>
            <!--/ Container end -->

        </div>
        <!--/ Navigation end -->
    </header>
    <div>
        @RenderBody()
    </div>
    <footer id="footer" class="footer bg-overlay">

        <div class="copyright">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="copyright-info text-center text-md-center">
                            <div class="footer-social">
                                <ul>
                                    <li>
                                        <a href="https://www.facebook.com/people/Servis-Hidraulike-Hidromil/100074182869099/" aria-label="Facebook">
                                            <i class="fab fa-facebook-square" style="color:black;"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://www.instagram.com/hidromill_/" aria-label="Instagram">
                                            <i class="fab fa-instagram" style="color:black;"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://www.youtube.com/channel/UCnAhYOd3uGXPXlz7guFVbFw" aria-label="YouTube">
                                            <i class="fab fa-youtube" style="color:black;"></i>
                                        </a>
                                    </li>

                                </ul>
                            </div><!-- Footer social end -->
                        </div>
                    </div>


                </div><!-- Row end -->

                <div id="back-to-top" data-spy="affix" data-offset-top="10" class="back-to-top position-fixed">
                    <button class="btn btn-primary" title="Back to Top">
                        <i class="fa fa-angle-double-up"></i>
                    </button>
                </div>

            </div><!-- Container end -->
        </div><!-- Copyright end -->
    </footer>
    <!-- initialize jQuery Library -->
    <script src="~/plugins/jQuery/jquery.min.js"></script>
    <!-- Bootstrap jQuery -->
    <script src="~/plugins/bootstrap/bootstrap.min.js" defer></script>
    <!-- Slick Carousel -->
    <script src="~/plugins/slick/slick.min.js"></script>
    <script src="~/plugins/slick/slick-animation.min.js"></script>
    <!-- Color box -->
    <script src="~/plugins/colorbox/jquery.colorbox.js"></script>
    <!-- shuffle -->
    <script src="~/plugins/shuffle/shuffle.min.js" defer></script>


    <!-- Google Map API Key-->
    <script src="../https://maps.googleapis.com/maps/api/js?key=AIzaSyCcABaamniA6OL5YvYSpB3pFMNrXwXnLwU" defer></script>
    <!-- Google Map Plugin-->
    <script src="~/plugins/google-map/map.js" defer></script>

    <!-- Template custom -->
    <script src="../js/script.js"></script>
</body>
</html>
